{
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "declaration": false
  },
  "include": ["api/**/*.ts", "shared/**/*.ts"],
  "exclude": ["client", "node_modules", "dist", "api/vite.ts", "vite.config.ts"]
}
